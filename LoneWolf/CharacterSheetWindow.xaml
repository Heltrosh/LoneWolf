        <Label x:Name="lblDiscipline2" Content="2:" HorizontalAlignment="Left" Margin="16,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDiscipline2" HorizontalAlignment="Left" Margin="40,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" IsEnabled="False"/>
        <Label x:Name="lblDiscipline3" Content="3:" HorizontalAlignment="Left" Margin="16,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDiscipline3" HorizontalAlignment="Left" Margin="40,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" IsEnabled="False"/>
        <Label x:Name="lblWeaponMasteries" Content="Weapon Masteries:" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,-0.05" FontWeight="Bold"/>
