        <TextBox x:Name="txtBonusEND" HorizontalAlignment="Left" Margin="58,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" IsEnabled="False"/>
        <Label x:Name="lblCSEND" Content="Combat Score &amp; Endurance:" HorizontalAlignment="Left" Margin="235,110,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblCS" Content="CS:" HorizontalAlignment="Left" Margin="245,137,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblEND" Content="END:" HorizontalAlignment="Left" Margin="245,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCS" HorizontalAlignment="Left" Margin="287,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
        <TextBox x:Name="txtEND" HorizontalAlignment="Left" Margin="287,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
        <Label x:Name="lblWeapons" Content="Weapons:" HorizontalAlignment="Left" Margin="6,187,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
