        <TextBox x:Name="txtGold" HorizontalAlignment="Left" Margin="289,295,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="40"/>
        <Label x:Name="lblSpecialItems" Content="Special Items:" HorizontalAlignment="Left" Margin="235,318,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="txtSpecialItems" HorizontalAlignment="Left" Margin="255,349,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="134" Height="125" AcceptsReturn="True"/>
        <Button x:Name="btnNewCharacter" Content="Create New Character" HorizontalAlignment="Left" Margin="26,490,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Click="btnNewCharacter_Click"/>
        <Button x:Name="btnSaveCharacter" Content="Save Character" HorizontalAlignment="Left" Margin="184,490,0,0" VerticalAlignment="Top" Click="btnSaveCharacter_Click"/>
        <Button x:Name="btnLoadCharacter" Content="Load Character" HorizontalAlignment="Left" Margin="302,490,0,0" VerticalAlignment="Top" Click="btnLoadCharacter_Click"/>

    </Grid>
</Window>
