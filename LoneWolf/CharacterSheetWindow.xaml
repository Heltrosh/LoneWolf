        <TextBox x:Name="txtBag2" HorizontalAlignment="Left" Margin="40,318,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="lblBag3" Content="3:" HorizontalAlignment="Left" Margin="16,337,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBag3" HorizontalAlignment="Left" Margin="40,341,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163"/>
